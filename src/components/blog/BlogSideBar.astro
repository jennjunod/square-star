---
interface Props {
  headings: Array<Object>;
}

const { headings } = Astro.props;
---

<aside class="toc-container">
  
  <nav class='hidden lg:block sticky top-6'>
    <ul class="space-y-2">
      <h4 class="font-bold">Table of Contents</h4>
      {
        headings.map((heading: any) => (
          <li class='py-1'>
            {[...Array(heading.depth - 1)].map((_, _i) => (
              <span class='inline-block w-9' />
            ))}
            <a
              class='hover:text-stone transition-all duration-140 ease-in-out text-dark poppins block break-words' 
              href={`#${heading.slug}`}
            >
              {heading.text}
            </a>
          </li>
        ))
      }
    </ul>
  </nav>
</aside>