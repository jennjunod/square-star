---
import { getCollection } from 'astro:content';
import LivestreamList from '../livestream/LivestreamList.astro';
import { Card } from '@eliancodes/brutal-ui';
import { Button } from '@eliancodes/brutal-ui';

interface Props {
  count?: number;
}

const { count } = Astro.props;

const posts = await getCollection('livestream').then((posts) =>
  posts.reverse().slice(0, count ?? 3)
);
---

<section class='mt-8'>
  <Card>
    <div class='flex justify-between items-start'>
      <h2 class='text-2xl md:text-4xl lg:text-6xl mb-8 dm-serif'>
        Recent Livestreams
      </h2>
      <div class='hidden md:block'>
        <Button href='/livestream/'>Go to livestream &rarr;</Button>
      </div>
      <div class='block md:hidden'>
        <Button href='/livestream/'>to livestream</Button>
      </div>
    </div>
    <LivestreamList posts={posts} />
  </Card>
</section>
